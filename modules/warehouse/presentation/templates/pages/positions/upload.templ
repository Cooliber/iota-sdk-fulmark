templ UploadForm(props *UploadPageProps) {
	<form
		id="save-form"
		class="flex flex-col justify-between mt-6"
		hx-post={ props.SaveURL }
		hx-swap="outerHTML"
		hx-indicator="#save-btn"
	>
		@components.UploadInput(&components.UploadInputProps{
			Label:       props.T("WarehousePositions.Upload.UploadLabel"),
			Placeholder: props.T("WarehousePositions.Upload.UploadPlaceholder"),
			Error:       props.Errors["FileID"],
			Accept:      "text/csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel",
			Name:        "FileID",
			Class:       "col-span-3",
			Form:        "save-form",
		})
		<div class="h-20 shadow-t-lg w-full flex items-center justify-end bg-surface-300 mt-auto gap-4">
			@button.Primary(button.Props{
				Size: button.SizeMD,
				Attrs: templ.Attributes{
					"id": "save-btn",
				},
			}) {
				{ props.T("WarehousePositions.Upload.Submit") }
			}
		</div>
	</form>
}

templ Upload(props *UploadPageProps) {
	@layouts.Authenticated(props.PageContext) {
		@card.Card(card.Props{Class: "m-6"}) {
			<h1 class="text-xl font-bold mb-4">{ props.T("WarehousePositions.Upload.Example.Title") }</h1>
			<p class="text-gray-700 mb-4">{ props.T("WarehousePositions.Upload.Example.Description") }</p>
			<ul class="list-disc list-inside text-gray-700 mb-6">
				<li>{ props.T("WarehousePositions.Upload.Example.ItemName") }</li>
				<li>{ props.T("WarehousePositions.Upload.Example.ItemCode") }</li>
				<li>{ props.T("WarehousePositions.Upload.Example.Unit") }</li>
				<li>{ props.T("WarehousePositions.Upload.Example.Quantity") }</li>
			</ul>
			<p class="text-lg mb-1">
				{ props.T("WarehousePositions.Upload.Example.Below") }
			</p>
			@exampleTable(props)
			@UploadForm(props)
		}
	}
}
